<% provide(:title, "Edit Post") %>
<div class="well">
   <h1>Edit Post</h1>
   <%= form_for(@post) do |f| %>
      <%= render '/shared/error_messages' %>
      <%= f.label "Title" %>
      <%= f.text_field :title, class: "span7" %>
      <label>Content Type</label>
      <%= f.select :content_type, [['General','general'],['Social','social'],['Workshop','workshop']], {}, { :class => 'form-control'} %>

      <%= f.label "Content" %>
      <%= f.text_area :content, class: "span10" %>
      <br><br>
      <%= f.submit "Save Changes", class: "btn-inverse btn-large btn-primary" %>
   <% end %>
</div>
