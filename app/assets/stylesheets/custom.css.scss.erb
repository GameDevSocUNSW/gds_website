@import "bootstrap";
@import "bootstrap-responsive";
@import "font-awesome";
// Author: Omair Ali 

//Variables

$footerColor: #171717;
$backgroundColor: #7DAB71;
$mainWellColor:rgba(216,226,232,0.8);
$sideWellColor:rgba(230,0,30,0.8);
$instructionWellColor:rgba(160,232,84,0.8);
$fontColor: #fff;
$accountColor: #E7EB79;
$footerHeight: 70px;

//==============
// UNIVERSAL
//==============

// Set footer to stretch when on mobile.
@media (max-width: 767px) {
   footer {
      margin-left: -20px;
      margin-right: -20px;
   }
}

@media (max-width: 979px) {
   .navbar {
      margin-left: -20px;
      margin-right: -20px;
   }
}


html {
   overflow-y: scroll;
}

body {

   background-color: $backgroundColor;
   background-image:url(<%= asset_path 'bg.png' %>);
   background-repeat: repeat-x;
}

section {
   overflow: auto;
}

#homeunit{
   background-image:url(<%= asset_path 'bg.jpg' %>);
   h1 {
      color:#fff;
      text-align: left;
   }

   p {
      color:#fff;
      font-size: 1em;
   }
}

textarea {
   resize: vertical;
}

.center {
   float:none;  
   margin: 0 auto;
}

.center h1 {
   margin-bottom: 10px;
}

.well{
   background-color:$mainWellColor;
}

.instruction-well{
   background-color:$instructionWellColor;
   li {
      font-size:1.2em;
   }
}

.navbar {
   position:fixed;
}
//==============
// TYPOGRAPHY
//==============

h1, h2, h3, h4, h5, h6 {
   line-height: 1;
}

h1 {
   font-size: 3em;
   letter-spacing: -2px;
   margin-bottom: 30px;
   text-align: center;
}

h2 {
   font-size: 2em;
   letter-spacing: -1px;
   margin-bottom: 30px;
   text-align: center;
   font-weight: normal;
}

p {
   font-size: 1.1em;
   line-height: 1.7em;
}

//==============
// HEADER
//==============

#logo {
   float: left;
   margin-right: 10px;
   font-size: 1.7em;
   color: #fff;
   //text-transform: uppercase;
   letter-spacing: -1px;
   padding-top: 9px;
   font-weight: bold;
   line-height: 1;
}

#logo:hover {
   color: #7CC6F7;
   text-decoration: none;
}

#navop {
   font-weight:bold;
}

#account{
   font-weight:bold;
   color: $accountColor;
   &:hover{
      color:#F8FF24;
      .caret{
      border-top-color: #F8FF24 !important;
      border-bottom-color: #F8FF24 !important; 

      }
   }
   .caret {
      border-top-color: $accountColor !important;
      border-bottom-color: $accountColor !important; 
   }
}

#greeting{
   padding: 10px 15px;
   font-weight:bold;
   color: #fff;
}
#signup{
   font-weight:bold;
   color: #CF6D6D;
   &:hover{
      color: #ff0000;
   }
}

.maincontainer{
   padding-top: 80px;
}

.well{
   border: 0px;
}

.side-well {
   background-color: $mainWellColor;
   position: fixed;
}

//==============
// FOOTER
//==============

.footer {
   width:100%;
   bottom:0;
   position:fixed;
   height:$footerHeight;
   background-color:$footerColor;
   a {
      color: #577DFA;
      &:hover {
         color: #FAD457;
      }
   }

   small {
      float: left;
      color: $fontColor;
   }

   ul {
      float: right;
      list-style: none;
   }

   ul li {
      float: left;
      margin-left: 10px;
   }

   .well {
      border: 0px;
      background-color: $footerColor;
   }

   .contact{
      float: right;
      text-align: right;
      color: $fontColor;
   }
}

