@import "bootstrap";
@import "font-awesome";
// Author: Omair Ali 
// (With significant amounts stolen from Michael Hartl's Rails Tutorial)


//Variables

$footerColor: #171717;
$backgroundColor: #7CC6F7;
$mainWellColor:#A8ABA7;
$fontColor: #fff;
//==============
// UNIVERSAL
//==============

html {
   overflow-y: scroll;


   body {
      background-color: $footerColor;
   }

   section {
      overflow: auto;
   }

   #mainsection {
      background-image:url(<%= asset_path 'bg.png' %>);
      background-attachment:fixed;
      background-color:$backgroundColor;
   }
   textarea {
      resize: vertical;
   }

   .center {
      text-align: center;
   }

   .center h1 {
      margin-bottom: 10px;
   }

   .panel {
      // background-color:#FFFFFF;
   }

   .well{
      background-color:$mainWellColor;
   }
   //==============
   // TYPOGRAPHY
   //==============

   h1, h2, h3, h4, h5, h6 {
      line-height: 1;
   }

   h1 {
      font-size: 3em;
      letter-spacing: -2px;
      margin-bottom: 30px;
      text-align: center;
   }

   h2 {
      font-size: 2em;
      letter-spacing: -1px;
      margin-bottom: 30px;
      text-align: center;
      font-weight: normal;
    //  color: #999;
   }

   p {
      font-size: 1.1em;
      line-height: 1.7em;
   }

   //==============
   // HEADER
   //==============

   #logo {
      float: left;
      margin-right: 10px;
      font-size: 1.7em;
      color: #fff;
      //text-transform: uppercase;
      letter-spacing: -1px;
      padding-top: 9px;
      font-weight: bold;
      line-height: 1;
   }

   #logo:hover {
      color: #54DB2E;
      text-decoration: none;
   }

   #navop {
      font-weight:bold;
   }

   #signup{
      font-weight:bold;
      color: #DB2E4B;
   }

   #signup:hover{
      color: #ff0000;
   }

   .mainwell{
      padding-top: 80px;
      padding-bottom: 50px;
   }

   .well{
      border: 0px;
   }

   //==============
   // FOOTER
   //==============

   footer {
      bottom: 0;
      height: 100px;
      left: 0;
    //  position: absolute;
      width: 100%;
      // position: absolute;
      // bottom:0;
      //  width:100%;
      //   height:60px;
      //   margin-top: 45px;
      //  padding-top: 5px;
      ///  border-top: 1px solid #eaeaea;
      // color: #999;
   }

   footer a {
      color: #555;
   }

   footer a:hover {
      color: #ff00ff;
   }

   footer small {
      float: left;
      color: $fontColor;
   }

   footer ul {
      float: right;
      list-style: none;
   }

   footer ul li {
      float: left;
      margin-left: 10px;
   }

   footer .well {
      border: 0px;
      background-color: $footerColor;
   }

   footer .contact{
      float: right;
      color: $fontColor;
   }
}
